<div id="<%= dom_id tweet %>" class="card tweet p-2 my-2">
<div class="card-body">
  <div class="profile-img">
    <%= image_tag "twitter-x.svg", class: "x-img" %>
  </div>
  <div class="tweet-content">
    <p><%= tweet.userName %> - <%= time_ago_in_words(tweet.updated_at) %></p>
    <p>
      <strong><%= tweet.description %></strong>
    </p>
  </div>
</div>
  <div class="card-footer">
    <%= link_to "Ver", tweet, class: "btn btn-primary" %>
    <%= link_to "Editar", edit_tweet_path(tweet), class: "btn btn-primary" %>
    <%= link_to "Borrar", tweet, data: { turbo_method: :delete, turbo_confirm: "Deseas borrar este tweet?"}, class: "btn btn-danger" %>
  </div>
</div>
